@using Plesnik.Eshop.Web.Areas.Admin.Controllers
@model CarouselItem

@{
    if (!String.IsNullOrWhiteSpace(ViewBag.Action))
    {
        <form asp-action="@ViewBag.Action" method="post" enctype="multipart/form-data">
            @{
                if (ViewBag.Action == nameof(CarouselController.Edit))
                {
                    <input type="hidden" asp-for="Id" class="form-control" />
                }
            }

            <div class="form-group">
                <label asp-for="Image">Image Source</label>
                <input asp-for="Image" class="form-control-file" accept="image/*" placeholder="Enter Image Source">
            </div>
            <div class="form-group">
                <label asp-for="ImageAlt">Image Alt</label>
                <input asp-for="ImageAlt" type="text" class="form-control" placeholder="Enter Image Alt">
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    }
}


@model IList<CarouselItem>
@{
    ViewData["Title"] = "Carousel Item";
}
<h1>@ViewData["Title"]</h1>

<p>This page shows all Carousel Items for admin.</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Image Source</th>
            <th scope="col">Image Alt</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Count; ++i)
        {

            <tr>
                <th scope="row">@Model[i].Id</th>
                <td><a href="@Model[i].ImageSource">@Model[i].ImageSource</a></td>
                <td>@Model[i].ImageAlt</td>
            </tr>
        }
    </tbody>
</table>
@model IList<ProductItem>
@{
    ViewData["Title"] = "Product Items";
}
<h1>@ViewData["Title"]</h1>

<p>This page shows all Product Items for admin.</p>

<div class="d-flex justify-content-between">
    <p><a class="btn btn-primary" role="button" asp-action="Create">Create new Product</a></p>
    <a class="nav-link" asp-area="Admin" asp-controller="ProductRelationEntry" asp-action="Select">Suggested Related Products</a>
</div>


@if (Model != null && Model.Count > 0)
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Name</th>
                <th scope="col">Description</th>
                <th scope="col">Price</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Count; ++i)
            {

                <tr>
                    <th scope="row">@Model[i].Id</th>
                    <td class="text-truncate" style="max-width: 150px;">@Model[i].Name</td>
                    <td class="text-truncate" style="max-width: 150px;">@Model[i].Description</td>
                    <td class="text-truncate" style="max-width: 150px;">@Model[i].Price</td>
                    <td>
                        <a asp-action="Details" asp-route-Id="@Model[i].Id">Details</a> |
                        <a asp-action="Edit" asp-route-Id="@Model[i].Id">Edit</a> |
                        <a asp-action="Delete" asp-route-Id="@Model[i].Id" onclick="return confirmDelete();">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Product list is empty.</p>
}

@section Scripts
{
    <script src="~/js/alerts.js"></script>
} 